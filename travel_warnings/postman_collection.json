{
  "info": {
    "name": "Travel Warnings Microservice API",
    "description": "API collection for testing the Travel Warnings microservice",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Travel Warnings",
      "item": [
        {
          "name": "Get All Warnings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/travel-warnings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "travel-warnings"]
            }
          }
        },
        {
          "name": "Get Active Warnings Only",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/travel-warnings?activeOnly=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "travel-warnings"],
              "query": [
                {
                  "key": "activeOnly",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Warning by Country Code (Germany)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/travel-warnings/country/DE",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "travel-warnings", "country", "DE"]
            }
          }
        },
        {
          "name": "Get Detailed Warning (Germany)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/travel-warnings/country/DE/detail",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "travel-warnings", "country", "DE", "detail"]
            }
          }
        },
        {
          "name": "Get Warnings Batch",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\"DE\", \"FR\", \"IT\", \"AF\"]"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/travel-warnings/batch",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "travel-warnings", "batch"]
            }
          }
        },
        {
          "name": "Manually Refresh Warnings",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/travel-warnings/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "travel-warnings", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "User Trips",
      "item": [
        {
          "name": "Get User's Trips",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/trips/user/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "trips", "user", "{{userId}}"]
            }
          }
        },
        {
          "name": "Create Trip",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"countryCode\": \"ES\",\n  \"countryName\": \"Spain\",\n  \"startDate\": \"2025-12-20\",\n  \"endDate\": \"2026-01-05\",\n  \"tripName\": \"Christmas in Barcelona\",\n  \"notificationsEnabled\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/trips",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "trips"]
            }
          }
        },
        {
          "name": "Update Trip",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startDate\": \"2025-12-22\",\n  \"endDate\": \"2026-01-07\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/trips/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "trips", "1"]
            }
          }
        },
        {
          "name": "Get Warnings for User's Trips",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/trips/user/{{userId}}/warnings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "trips", "user", "{{userId}}", "warnings"]
            }
          }
        },
        {
          "name": "Toggle Notifications (Enable)",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/trips/1/notifications?enabled=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "trips", "1", "notifications"],
              "query": [
                {
                  "key": "enabled",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Toggle Notifications (Disable)",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/trips/1/notifications?enabled=false",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "trips", "1", "notifications"],
              "query": [
                {
                  "key": "enabled",
                  "value": "false"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Trip",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/trips/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "trips", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Health & Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/q/health",
              "host": ["{{baseUrl}}"],
              "path": ["q", "health"]
            }
          }
        },
        {
          "name": "Readiness Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/q/health/ready",
              "host": ["{{baseUrl}}"],
              "path": ["q", "health", "ready"]
            }
          }
        },
        {
          "name": "Liveness Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/q/health/live",
              "host": ["{{baseUrl}}"],
              "path": ["q", "health", "live"]
            }
          }
        }
      ]
    }
  ]
}

